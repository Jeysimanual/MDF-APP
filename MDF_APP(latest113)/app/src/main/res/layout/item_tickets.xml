<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context=".Student.StudentTickets">

    <androidx.cardview.widget.CardView
        android:id="@+id/ticketPass"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:backgroundTint="@color/ticket_bg"
        android:clickable="false"
        android:focusable="false"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <!-- Single Merged Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/merged_card"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:background="@drawable/ticket_card_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Event Details Section (Left Side) -->
                    <TextView
                        android:id="@+id/eventName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/host_grotesk_bold"
                        android:text="Event Name"
                        android:textColor="#1B5E20"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintEnd_toStartOf="@+id/qrCodeImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/eventType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/host_grotesk_medium"
                        android:text="Event Type"
                        android:textColor="#388E3C"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/eventName" />

                    <LinearLayout
                        android:id="@+id/dateTimeSection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/light_green_rounded_bg"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="6dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/eventType">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_calendar"
                            app:tint="#1B5E20" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/startDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/host_grotesk_medium"
                                android:text="Date"
                                android:textColor="#1B5E20"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/timeRange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/host_grotesk_bold"
                                android:text="Time"
                                android:textColor="#1B5E20"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:ellipsize="end"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/startDate"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/locationSection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@id/dateTimeSection"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="#1B5E20" />

                        <TextView
                            android:id="@+id/venue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:fontFamily="@font/host_grotesk_medium"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="Location"
                            android:textColor="#1B5E20"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- QR Code Section (Right Side) -->
                    <ImageView
                        android:id="@+id/qrCodeImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="2dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/ticket_id_text" />

                    <TextView
                        android:id="@+id/ticket_id_text"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/host_grotesk_medium"
                        android:text="Ticket ID:"
                        android:textAlignment="center"
                        android:textColor="#757575"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/qrCodeImage"
                        app:layout_constraintBottom_toTopOf="@+id/ticketID" />

                    <TextView
                        android:id="@+id/ticketID"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/host_grotesk_medium"
                        android:text="000000000"
                        android:textAlignment="center"
                        android:textColor="#1B5E20"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ticket_id_text"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Top Notch -->
            <View
                android:id="@+id/top_notch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-23dp"
                android:background="@drawable/reverse_half_circle"
                app:layout_constraintTop_toTopOf="@+id/merged_card"
                app:layout_constraintStart_toStartOf="@+id/merged_card"
                app:layout_constraintEnd_toEndOf="@+id/merged_card"
                app:layout_constraintHorizontal_bias="0.70" />

            <!-- Bottom Notch -->
            <View
                android:id="@+id/bottom_notch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="-23dp"
                android:background="@drawable/half_circle"
                app:layout_constraintBottom_toBottomOf="@+id/merged_card"
                app:layout_constraintStart_toStartOf="@+id/merged_card"
                app:layout_constraintEnd_toEndOf="@+id/merged_card"
                app:layout_constraintHorizontal_bias="0.70" />

            <!-- Dashed Line -->
            <com.capstone.mdfeventmanagementsystem.Utilities.VerticalViewDashDottedLine
                android:id="@+id/dashed_line"
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:elevation="10dp"
                app:lineColor="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/top_notch"
                app:layout_constraintBottom_toTopOf="@+id/bottom_notch"
                app:layout_constraintStart_toStartOf="@+id/merged_card"
                app:layout_constraintEnd_toEndOf="@+id/merged_card"
                app:layout_constraintHorizontal_bias="0.68" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>