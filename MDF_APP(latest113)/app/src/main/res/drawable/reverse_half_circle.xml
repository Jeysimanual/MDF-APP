<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Green border circle (slightly larger) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#4CAF50"/>
            <size
                android:width="52dp"
                android:height="52dp"/>
        </shape>
    </item>

    <!-- White inner circle -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/ticket_bg"/>
            <size
                android:width="48dp"
                android:height="48dp"/>
        </shape>
    </item>

    <!-- White rectangle to cover top half -->
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="26dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/ticket_bg"/>
        </shape>
    </item>

</layer-list>