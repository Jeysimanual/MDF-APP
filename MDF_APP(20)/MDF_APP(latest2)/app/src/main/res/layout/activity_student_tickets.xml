<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context=".Student.StudentDashboard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/profile_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/profile_frame"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_placeholder"                        android:layout_gravity="start"
                        android:clickable="true"
                        android:focusable="true" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="My Tickets"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_20sdp"/>

                    <ImageView
                        android:id="@+id/filter"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_filter"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </LinearLayout>

            </RelativeLayout>

            <!-- Tab Slider -->
            <LinearLayout
                android:id="@+id/tabSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/tab_background"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:padding="4dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tabActive"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Active"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/tab_selected"
                    android:textColor="@color/black"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/tabExpired"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Expired"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:textColor="@color/gray"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- No Events Message -->
            <TextView
                android:id="@+id/noEventMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No events found in the selected date range."
                android:fontFamily="@font/host_grotesk_bold"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/bg_green"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"
                android:layout_marginTop="16dp" />

            <!-- RecyclerView for Events (Takes Remaining Space) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTickets"
                android:layout_width="match_parent"
                android:layout_height="522dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_weight="1"
                tools:listitem="@layout/item_events" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <!-- Bottom Navigation (Fixed at Bottom) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"/>

</FrameLayout>
