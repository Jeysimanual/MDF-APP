<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <!-- Close (X) button -->
    <ImageView
        android:id="@+id/btnCloseOtp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close"
        android:tint="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:contentDescription="Close OTP" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- Title -->
        <TextView
            android:id="@+id/tvOtpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvOtpSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the 6-digit OTP sent to your email."
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- OTP Input -->
        <EditText
            android:id="@+id/etOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:inputType="number"
            android:maxLength="6"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp"/>

        <!-- Verify Button -->
        <Button
            android:id="@+id/btnVerifyOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:backgroundTint="@color/bg_green_btn"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Resend OTP -->
        <TextView
            android:id="@+id/tvResendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive OTP? Resend"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</RelativeLayout>
