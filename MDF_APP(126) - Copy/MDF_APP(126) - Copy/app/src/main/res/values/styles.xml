<resources>

    <!-- Existing styles like Theme.YourAppName, etc. -->

    <!-- Custom style for your info text -->
    <style name="InfoField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>


    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:elevation">2dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="checkedIconTint">@android:color/white</item>
    </style>

    <style name="CalendarDateText"></style>

    <style name="CalendarWeekDayText"></style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="CustomToggleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/bg_green</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/toggle_background_selector</item>
        <item name="android:textColor">@color/toggle_text_selector</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">8dp</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/bg_green</item>
        <item name="chipStrokeColor">@color/bg_green</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipEndPadding">4dp</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="closeIconTint">@color/bg_green</item>
        <item name="closeIconSize">16dp</item>
    </style>


</resources>
