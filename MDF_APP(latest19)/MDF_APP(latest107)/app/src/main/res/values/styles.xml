<resources>

    <!-- Existing styles like Theme.YourAppName, etc. -->

    <!-- Custom style for your info text -->
    <style name="InfoField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>


    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:elevation">2dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="checkedIconTint">@android:color/white</item>
    </style>

</resources>
