<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Base.Theme.MDFEventManagementSystem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <!-- ✅ Default App Theme (Fallback) -->
    <style name="AppTheme" parent="Base.Theme.MDFEventManagementSystem">
        <item name="colorPrimary">@color/gray</item>
        <item name="android:statusBarColor">@color/gray</item>
    </style>

    <!-- ✅ Teacher Theme (Blue) -->
    <style name="BlueTheme" parent="Base.Theme.MDFEventManagementSystem">
        <item name="colorPrimary">@color/primary</item> <!-- e.g., blue -->
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- ✅ Student Theme (Green) -->
    <style name="GreenTheme" parent="Base.Theme.MDFEventManagementSystem">
        <item name="colorPrimary">@color/green</item>
        <item name="android:statusBarColor">@color/green</item>
    </style>

    <!-- ✅ Login/Signup Theme (White) -->
    <style name="LoginTheme" parent="Base.Theme.MDFEventManagementSystem">
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/black</item>
    </style>

</resources>