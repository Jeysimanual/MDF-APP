<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer green semicircle -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="30dp" android:height="15dp" />
            <solid android:color="#1B5E20" />
            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>
    <!-- Inner white semicircle -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <size android:width="26dp" android:height="13dp" />
            <solid android:color="@android:color/white" />
            <corners
                android:bottomLeftRadius="13dp"
                android:bottomRightRadius="13dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>
</layer-list>